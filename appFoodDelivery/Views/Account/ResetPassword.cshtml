@model storeResetPasswordViewmodel;
@{
    ViewData["Title"] = "Reset Password";
}

<h1>@ViewData["Title"]</h1>



<div class="row">
    <div class="col-md-12">
        <form method="post">
            <h4>Create a new account.</h4>
            <hr />
            <input asp-for="Email" class="form-control" type="hidden" />
            <input asp-for="Token" class="form-control" type="hidden" />
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="Password"></label>
                </div>
                <div class="form-group col-md-6">
                    <input asp-for="Password" class="form-control" placeholder="Enter Password.." />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">

                </div>

            </div>
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="ConfirmedPassword"></label>
                </div>
                <div class="form-group col-md-6">
                    <input asp-for="ConfirmedPassword" class="form-control" placeholder="Enter ConfirmedPassword.." />
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>
                <div class="form-group col-md-2">

                </div>

            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All" class="text-danger"></div>
        </form>
    </div>
</div>
