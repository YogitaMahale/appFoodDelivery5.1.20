@model distanceEditViewModel;
@{
    ViewBag.Title = "Distance";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Distance</a></li>
                    @*<li class="breadcrumb-item active" aria-current="page">Edit City Registration</li>*@
                </ol>
            </nav><br /><br />



                        <form name="form1" method="post" enctype="multipart/form-data" asp-action="Index">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                           
                            <input type="hidden" asp-for="id" />
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label asp-for="range"></label>
                                </div>
                                <div class="form-group col-md-4">
                                    <input asp-for="range" class="form-control" placeholder="Enter Range.." />
                                    <span asp-validation-for="range" class="text-danger"></span>

                                </div>
                            </div>
 

                            <div class="form-group">

                                <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Update</button>
                                @*<a asp-action="index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>*@
                                <br />
                                <br />
                                <br />

                            </div>
                        </form>
        </div>
    </div>
</div>

