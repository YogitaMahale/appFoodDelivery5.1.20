 
@model appFoodDelivery.pagination.OrderPagination<OrderIndexViewModel>
@{
    ViewBag.Title = "Driver Details";
}


<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Order Details</li>
                    </ol>
                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        @*<a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create"> New Driver</a>*@

                        <table class="table table-striped tblShow">
                            <thead>
                                <tr>
                                    @*id, customerid, amount, placedate, deliveryboyid, paymentstatus, orderstatus, 
                                        isdeleted, discount, storeid, deliveryaddress, paymenttype, promocode, transactionid*@

                                    <th style="display:none;">id</th>
                                    <th  style="display:none;">Store</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Date</th>
       
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td style="display:none;">

                                            <a asp-action="Detail" asp-route-id="@item.id" id="lblid">
                                                @item.id
                                            </a>
                                        </td>
                                        <td  style="display:none;">
                                            
                                                @item.storeid
                                             
                                        </td>
                                        <td>
                                            @item.customername
                                        </td>
                                        <td>@item.amount  </td>

                                        <td>@item.placedate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a class="text-success" asp-action="Edit" asp-route-id="@item.id">
                                                <i class="fas fa-edit"></i> Details
                                            </a>
                                            @*<a class="text-success" asp-action="Edit" asp-route-id="@item.id">
            <i class="fas fa-edit"></i> Edit
        </a>

        <a class="text-danger" asp-action="Delete" asp-route-id="@item.id">
            <i class="far fa-trash-alt"></i> Delete
        </a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table><br />
                        @{
                            var disablePrevious = !Model.IsPreviousAvailable ? "disabled" : "";
                            var disableNext = !Model.IsNextAvailable ? "disabled" : "";
                        }

                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           class="btn btn-primary @disablePrevious">
                            Previous
                        </a>
                        <a asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           class="btn btn-primary @disableNext">
                            Next
                        </a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
