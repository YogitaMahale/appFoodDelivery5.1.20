                                    <option value="completedorders">Completed</option>
                                    <option value="cancelledorders">Cancelled</option>

                                </select>*@
                        </div>
                        <div class="form-group col-md-3">
                            <input type="submit" name="search" value="Search" class="btn btn-primary" />
